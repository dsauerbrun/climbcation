<style type="text/css">
	html, body, #map-canvas { height: 25em; margin: 0; padding: 0;}
</style>
<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAicaxhV5yGvMKxT06tgOlKDgrWUhzjjGE"></script>
<script type="text/javascript">
	function initialize() {
		var mapOptions = {
			center: { lat: <%= @location.latitude %>, lng: <%= @location.longitude %>},
			zoom: 8
		};
		var map = new google.maps.Map(document.getElementById('map-canvas'),mapOptions);
	}
	google.maps.event.addDomListener(window, 'load', initialize);
</script>

<div class="jumbotron">
	<div id="map-canvas">

	</div>
</div>
